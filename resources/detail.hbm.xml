<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 5.3//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd">  
  
 <hibernate-mapping>  
  <class name="pj2002.hibernate.exercise.entity.Cart" table="cart">  
    <id name="id">  
     <generator class="native"></generator>  
    </id>  
            
    <property name="userId" column="user_id" type="int"></property>
    <property name="productId" column="product_id" type="int"></property>
    <property name="quantity"></property>
    
    <many-to-one name="product" class="pj2002.hibernate.exercise.entity.Product"
      column="product_id" not-null="true" insert="false" update="false"/>
            
  </class>  
            
 </hibernate-mapping>  